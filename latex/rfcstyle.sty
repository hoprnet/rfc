% Fixed codebubble command with proper position tracking
\newcommand{\codebubble}[1]{%
  \leavevmode% Ensure we're in horizontal mode
  \begingroup
  % Set maximum tolerance for breaking at any position
  \tolerance=10000
  \emergencystretch=10em
  \hbadness=10000
  \hfuzz=5pt
  \pretolerance=10000
  % Enable breaking after every character
  \def\makeultrabreakable##1{%
    \ifx\relax##1\relax
    \else
      ##1\penalty0\hspace{0pt}%
      \expandafter\makeultrabreakable
    \fi
  }
  % Apply HOPR RFC styling with ultra-breakable formatting - INLINE ONLY
  \sourcecodepro\color{rfcbody}\makeultrabreakable{#1}\relax%
  \endgroup
}

% --- Codebubble environment (for multi-line code) ---
